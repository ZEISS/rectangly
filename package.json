    "react-dom": "^16.4.0",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.0",
    "styled-components": "2.4",
    "ts-jest": "^21.1.2",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.5.3",
    "zone.js": "^0.8.26"
  },
  "scripts": {
    "test": "yarn lint && yarn test:unit",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
